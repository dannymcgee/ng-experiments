/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "paths": {
      "@ng-emotion": ["src/app/ng-emotion"],
      "@ng-emotion/*": ["src/app/ng-emotion/*"],
      "@theme": ["src/app/theme"],
      "@theme/*": ["src/app/theme/*"]
    },
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
